{% extends 'VoitureBackOfficeBundle::layout.html.twig' %}

	{% block content %}

		<div class="col-md-9">

			<h3>Liste des marques proposées à la vente :</h3>
				{% for brand in showBrand %}
					<a href="{{ path('voiture_back_office_editionBrand',{id:brand.id}) }}">{{ brand.name }}<br>

					<a href="{{ path('voiture_back_office_suppBrand',{id:brand.id}) }}" class="btn btn-primary">Supprimer cette marque</a><br><br>

					<a href="{{ path('voiture_back_office_editionBrand',{id:brand.id}) }}" class="btn btn-primary">Editer cette marque</a><br><br>
				{% endfor %}<br>

		</div>

	{% endblock %}
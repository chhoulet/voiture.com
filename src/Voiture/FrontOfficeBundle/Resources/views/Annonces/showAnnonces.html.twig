{% extends 'VoitureFrontOfficeBundle::layout.html.twig' %}

	{% block content %}

		<div class="col-md-9">

			<h3>Liste de nos annonces:</h3>

			{% for annonce in showAnnonces %}
			    <img src="../images/{{ annonce.model }}.jpg" alt="{{ annonce.model }}" style="height:160px;" /><br>
				Auteur : {{ annonce.username }}<br>
				Dépôt de l'annonce le : {{ annonce.dateCreated | date('d-m-Y H:i:s') }}<br>
				Texte : {{ annonce.content }}<br>
				Marque : {{ annonce.brand }}<br>
				Modèle : {{ annonce.model }}<br>
				Date de la 1ére mise en circulation : {{ annonce.dateFirstAcquire | date('m-d-Y H:i:s') }}<br>
				Kilométrage :{{ annonce.kilometers}}<br><br>

				<a href="{{ path('voiture_front_office_oneAnnonce',{id:annonce.id}) }}" class="btn btn-primary">Plus de détails sur cette annonce :</a><br><br>
				
				<a href="{{ path('voiture_front_office_supAnnonce',{id:annonce.id}) }}" class="btn btn-primary">Supprimer cette annonce</a><br><br>

				<a href="#" class="btn btn-primary">Envoyer un mail à l'auteur</a><br><br><br>

			{% endfor %}

		</div>


	{% endblock %}
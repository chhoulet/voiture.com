{% extends 'VoitureFrontOfficeBundle::layout.html.twig' %}

	{% block content %}

			<h3>Garage: {{ oneGarage.name }}</h3><br><br>
				{{ oneGarage.ville }}<br>
				{{ oneGarage.adress }}<br>
				{{ oneGarage.brand }}<br><br><br>

			<h4>Liste des annonces rattachées à ce garage :</h3>
				{% for annonce in oneGarage.annonce %}
					{{ annonce.username }}<br>
					{{ annonce.content }}<br>
					{{ annonce.dateCreated | date('d-m-Y H:i:s') }}<br>
					{{ annonce.brand }}<br>
					{{ annonce.model }}<br>
					{{ annonce.engine }}<br>
					{{ annonce.price }}<br>
				{% endfor %}<br><br>

				<a href="{{ path('voiture_back_office_suppGarage',{id:oneGarage.id} )}}" class='btn btn-primary'>Supprimer  cet élément</a><br><br>

				<a href="{{ path('voiture_back_office_editionGarage',{id:oneGarage.id} )}}" class='btn btn-primary'>Editer cet élément</a><br><br>

	{% endblock %}